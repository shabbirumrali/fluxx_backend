                                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center" width="100%">
                                                <tr>
                                                    <td width="60"></td>
                                                    <td bgcolor="#ffffff" style="font-family: sans-serif; font-size: 16px; line-height: 26px; color: #383838; text-align: left; opacity:0.7;">
                                                        <p style="margin: 0;">Unable to click on the above button?</p>
                                                         <p style="margin: 0;">Click on the link below or copy/paste in the address bar.</p>
                                                        <a href="<%= link %>"><%= link %></a> 
